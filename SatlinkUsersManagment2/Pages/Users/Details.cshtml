@page
@model SatlinkUsersManagment2.Pages.Users.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "_Layout";
}

<h1>Details</h1>

<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Name)
        </dt>
        <dd class="col-sm-10">
            <span id="userName">@Html.DisplayFor(model => model.User.Name)</span>
            <button class="btn btn-link" onclick="editUserName()">Edit</button>
            <form id="editUserNameForm" method="post" style="display: none;">
                <input type="hidden" name="Id" value="@Model.User.Id" />
                <input type="hidden" name="NewName" value="@Model.User.Name" />
                <div class="form-group">
                    @* <input asp-for="User.Name" class="form-control" /> *@
                    <input type="text" class="form-control" id="Name" name="Name" value="@Model.User.Name" required>
                    <span asp-validation-for="User.Name" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
                <button type="button" class="btn btn-secondary" onclick="cancelEditUserName()">Cancel</button>
            </form>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Username)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Username)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Phone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Website)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Website)
        </dd>
    </dl>
</div>

<div>
    <h4>Address</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Address.Street)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Address.Street)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Address.Suite)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Address.Suite)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Address.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Address.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Address.Zipcode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Address.Zipcode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Address.Geo.Lat)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Address.Geo.Lat)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Address.Geo.Lng)
        </dt>
        <dd class="col-sm-10">
